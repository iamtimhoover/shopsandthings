<h1>Shop List</h1>

<p><%= link_to 'New Shop', new_shop_path %></p>

    <% @shops.each do |shop| %>
   
      <div class="panel panel-default box">
        
        <div class="panel-heading">
         <h3><%= link_to "#{shop.title}", shop %></h3>
         <p><%= shop.city %></p>


        </div><!-- /panel-header -->

        <div class="panel-body">

          <%= image_tag shop.image.url(:medium)%>

          <!--<p><%= shop.description %></p>-->
          <p><strong>Link:</strong><%= link_to " #{shop.link}", shop.link, :target => "_blank" %></p>

       </div><!-- /panel-body -->

       <% if user_signed_in? %>

        <div class="panel-footer">

          <p>
          <%= link_to 'Edit', edit_shop_path(shop) %> | 
          <%= link_to 'Delete', shop, method: :delete, data: { confirm: 'Are you sure?' } %></p>

        </div><!-- /panel-footer -->

      <% end %>

      </div><!-- /panel --> 


    <% end %>


<br>


